<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProductDetails"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="750dp"
            android:id="@+id/b_imaged"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/booktitle"
            android:text="Title"
            android:textSize="18sp"
            android:layout_below="@+id/b_imaged"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookauthor"
            android:text="Author"
            android:textSize="18sp"
            android:layout_below="@+id/booktitle"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookprice"
            android:text="Price"
            android:textSize="18sp"
            android:layout_below="@+id/bookauthor"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/booklike"
            android:text="Like"
            android:textSize="18sp"
            android:layout_below="@+id/bookprice"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookhates"
            android:text="Hates"
            android:textSize="18sp"
            android:layout_below="@+id/booklike"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookrating"
            android:text="Ratings"
            android:textSize="18sp"
            android:layout_below="@+id/bookhates"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookisbn"
            android:text="Isbn"
            android:textSize="18sp"
            android:layout_below="@+id/bookrating"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookpages"
            android:text="No Of Pages"
            android:textSize="18sp"
            android:layout_below="@+id/bookisbn"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookpublisher"
            android:text="Publisher"
            android:textSize="18sp"
            android:layout_below="@+id/bookpages"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:text="Buy Now"
            android:textSize="24sp"
            android:layout_below="@id/bookpublisher"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>


    </RelativeLayout>

</ScrollView>